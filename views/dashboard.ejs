<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="/styles/dashboard.css" />
</head>
<body>
    <header class="dashboard_header">
        <div class="header_logo">
            <h1>Quick Join</h1>
        </div>
        <div class="toolarea">
            <button class="add_link_button">
                <img src="/images/add-outline.svg">
            </button>
            <button class="settings_button" aria-describedby="tooltip">
                <img id="settings-button-image" src="/images/settings-outline.svg">
            </button>
            <div class="settings-box" id="tooltip" role="tooltip">
                <div class="settings-options">
                    <div>
                        <span>Signed in as </span>
                        <br>
                        <% if (user) { %>
                            <strong><%= user.email %></strong>
                        <% } %>
                    </div>
                    <div id="settings-page-link">
                        <span>Settings</span>
                    </div>
                    <div class="signout-button">
                        Sign out
                    </div>
                </div>
                <div id="arrow" data-popper-arrow></div>
            </div>
        </div>
    </header>

    <div class="link-container">
    </div>

    <div class="add_link_modal">
        <div class="modal-content">
            <h3 style="margin:0;">Add a link</h3>

            <div class="modal-input">
                <label for="meeting-url">Url</label>
                <input type="url" id="meeting-url" required>
            </div>

            <div class="modal-input">
                <label for="meeting-time">Meeting Time</label>
                <input type="time" id="meeting-time">
            </div>

            <div class="modal-input">
                <label for="meeting-name">Meeting Name</label>
                <input type="text" id="meeting-name" maxlength="30">
            </div>

            <div class="modal-buttons">
                <button class="add-link-button">Submit</button>
                <button class="cancel-modal">Cancel</button>
            </div>
        </div>
    </div>

    <script src="https://unpkg.com/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="/scripts/dashboard.js" type="module"></script>
</body>
</html>
